model User {
    id        String    @id @default(cuid())
    name      String
    email     String?   @unique // Email 變回 Optional，因為學號登入者可能沒有
    studentId String? // 學號，對於學號登入者是必須的
    schoolId  String
    school    School    @relation(fields: [schoolId], references: [id])
    accounts  Account[]
    createAt  DateTime  @default(now())
    updateAt  DateTime  @updatedAt
    salt      String    @default(cuid())

    @@unique([schoolId, studentId]) // 確保在同一間學校內，學號是唯一的
}
